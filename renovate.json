{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>konflux-ci/mintmaker//config/renovate/renovate.json"
  ],
  "labels": ["dependencies"],
  "gomod": {
    "schedule": ["* * 7 */3 *"],
    "postUpdateOptions": [
      "gomodUpdateImportPaths",
      "gomodTidy",
      "gomodVendor"
    ],
    "packageRules": [
      {
        "matchManagers": ["gomod"],
        "groupName": "Go modules"
      }
    ]
  },
  "helmv3": {
    "schedule": ["* * 7 */3 *"]
  },
  "lockFileMaintenance": {
    "packageRules": [
      {
        "matchManagers": ["helmv3"]
      }
    ],
    "schedule": ["* * 7 */3 *"]
  },
  "dockerfile": {
    "packageRules": [
      {
        "matchManagers": ["dockerfile"],
        "matchPackageNames": "docker.io/library/golang",
        "enabled": false
      }
    ]
  },
  "pip_requirements": {
    "packageRules": [
      {
        "groupName": "Pip requirements",
        "matchManagers": ["pip_requirements"]
      }
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/patch_csv\\.py$/"],
      "matchStrings": [
        "# renovate: datasource=docker depName=(?<depName>[^\\s]+)\\s*\\n.*?LOKI_IMAGE_PULLSPEC\\s*=\\s*['\"](?<currentValue>[^@'\"]+)@(?<currentDigest>sha256:[a-f0-9]+)['\"]"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
